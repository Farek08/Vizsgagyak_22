<Window x:Class="JourneysGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JourneysGUI"
        mc:Ignorable="d"
        Title="Utazások" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="vehicle_LBX" Grid.Column="0" Grid.RowSpan="3"/>
        <Label Grid.Column="1" Grid.Row="0" Content="Meghirdetett utak" VerticalAlignment="Center"/>
        <ComboBox x:Name="country_CBX" Grid.Row="1" Grid.Column="1" Height="30"/>
        <TextBox x:Name="desc_TXB" Grid.Row="2" Grid.Column="1" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap"/>
    </Grid>
</Window>
